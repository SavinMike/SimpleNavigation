<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:padding="24dp">

	<android.support.v4.widget.Space
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_weight="1" />

	<Button
		android:id="@id/navigation_quiz"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_help"
		android:text="@string/label_navigation_quiz"
		android:textColor="@android:color/white" />


	<android.support.v4.widget.Space
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_weight="0.5" />

	<Button
		android:id="@id/navigation_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_image"
		android:text="@string/label_navigation_image"
		android:textColor="@android:color/white" />


	<android.support.v4.widget.Space
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_weight="0.5" />

	<Button
		android:id="@id/navigation_tell_story"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_microphone"
		android:text="@string/navigation_tell_story"
		android:textColor="@android:color/white" />

	<android.support.v4.widget.Space
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_weight="0.5" />

	<Button
		android:id="@id/navigation_explore"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_map"
		android:text="@string/label_navigation_explore"
		android:textColor="@android:color/white" />

	<android.support.v4.widget.Space
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_weight="2" />
</LinearLayout>